<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.encore.outpick_backend.Login.mapper.LoginMapper">

    <select id="login_employee"
        parameterType="com.encore.outpick_backend.Login.domain.LoginDTO"
        resultType="com.encore.outpick_backend.Login.domain.LoginDTO">

        SELECT 
            employee_number, password, name, employee_id as id
        FROM 
            employee
        WHERE 
            employee_number = #{employee_number}

    </select>

    <select id="login_admin"
        parameterType="com.encore.outpick_backend.Login.domain.LoginDTO"
        resultType="com.encore.outpick_backend.Login.domain.LoginDTO">

        SELECT 
            employee_number, password, name, admin_id as id
        FROM 
            admin
        WHERE 
            employee_number = #{employee_number}

    </select>

</mapper>